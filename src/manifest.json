{
  "manifest_version": 3,
  "name": "Tab Saver",
  "version": "0.1",
  "description": "Save and restore tab sessions",
  "browser_specific_settings": {
    "gecko": {
      "id": "{b38f88ac-9477-4c9b-a81a-0e532427d14a}"
    }
  },
  "icons": {
    "64": "icon-64.png"
  },
  "permissions": ["tabs", "storage"],
  "action": {
    "default_icon": {
      "64": "icon-64.png"
    },
    "default_title": "Tab Saver",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Open Tab Saver"
    }
  }
}
